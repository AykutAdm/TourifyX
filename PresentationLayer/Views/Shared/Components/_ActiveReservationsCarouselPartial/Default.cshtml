@using EntityLayer.Concrete
@model List<Reservation>
@{
    var reservations = Model ?? new List<Reservation>();
    var hasReservations = reservations.Any();
}

<div class="col-xl-4 col-lg-12">
    <div class="card">
        <div class="card-content">
            <div class="card-body">
                <h4 class="card-title">Aktif Rezervasyonlarım</h4>
                <h6 class="card-subtitle text-muted">Rezervasyon Bilgileri</h6>
            </div>
            @if (!hasReservations)
            {
                <div class="card-body text-center py-5">
                    <i class="la la-calendar-times" style="font-size: 48px; color: #ccc;"></i>
                    <p class="text-muted mt-3">Aktif rezervasyonunuz bulunmamaktadır.</p>
                </div>
            }
            else
            {
                <div id="carousel-area" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        @for (int i = 0; i < reservations.Count; i++)
                        {
                            <li data-target="#carousel-area" data-slide-to="@i" class="@(i == 0 ? "active" : "")"></li>
                        }
                    </ol>
                    <div class="carousel-inner" role="listbox">
                        @for (int i = 0; i < reservations.Count; i++)
                        {
                            var reservation = reservations[i];
                            <div class="carousel-item @(i == 0 ? "active" : "")">
                                <img src="@(string.IsNullOrEmpty(reservation.Destination?.ImageUrl) ? Url.Content("~/member/theme-assets/images/carousel/08.jpg") : reservation.Destination.ImageUrl)" 
                                     class="d-block w-100" 
                                     alt="@reservation.Destination?.City"
                                     style="height: 250px; object-fit: cover;">
                                <div class="carousel-caption d-none d-md-block" style="background: rgba(0,0,0,0.75); padding: 15px; border-radius: 8px; bottom: 20px; left: 50%; transform: translateX(-50%); width: 90%;">
                                    <h5 style="color: white; font-weight: bold; text-shadow: 2px 2px 4px rgba(0,0,0,0.8); margin-bottom: 5px;">@reservation.Destination?.City</h5>
                                    <p style="color: white; font-weight: 600; text-shadow: 2px 2px 4px rgba(0,0,0,0.8); margin: 0;">@reservation.Destination?.DayNight</p>
                                </div>
                            </div>
                        }
                    </div>
                    @if (reservations.Count > 1)
                    {
                        <a class="carousel-control-prev" href="#carousel-area" role="button" data-slide="prev">
                            <span class="la la-angle-left" aria-hidden="true"></span>
                            <span class="sr-only">Önceki</span>
                        </a>
                        <a class="carousel-control-next" href="#carousel-area" role="button" data-slide="next">
                            <span class="la la-angle-right icon-next" aria-hidden="true"></span>
                            <span class="sr-only">Sonraki</span>
                        </a>
                    }
                </div>
                <div class="card-body">
                    @foreach (var reservation in reservations)
                    {
                        <div class="mb-2">
                            <strong>@reservation.Destination?.City</strong>
                            <br />
                            <small class="text-muted">
                                Kişi Sayısı: @reservation.PersonCount | 
                                Tarih: @reservation.ReservationDate.ToString("dd MMM yyyy")
                            </small>
                        </div>
                    }
                    <a href="/Member/Reservation/MyCurrentReservation/" class="card-link">Tüm Aktif Rezervasyonlar</a>
                </div>
            }
        </div>
        @if (hasReservations)
        {
            <div class="card-footer border-top-blue-grey border-top-lighten-5 text-muted">
                <span class="float-left">@reservations.Count Aktif Rezervasyon</span>
                <span class="tags float-right">
                    <span class="badge badge-pill badge-success">Onaylandı</span>
                </span>
            </div>
        }
    </div>
</div>

