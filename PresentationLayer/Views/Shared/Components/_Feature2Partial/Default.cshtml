@using EntityLayer.Concrete
@model List<Feature2>

<div class="maghny-gd-1 col-lg-6 mt-lg-0 mt-4">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="maghny-gd-1 col-6 mb-4 mt-4">
                <div class="maghny-grid">
                    <figure class="effect-lily border-radius">
                        <img class="img-fluid" src="@item.ImageUrl" alt="" style="height:305px; width:300px;" />
                        <figcaption>
                            <div>
                                <h4>@item.Description</h4>
                                <p>@item.Title </p>
                            </div>

                        </figcaption>
                    </figure>
                </div>
            </div>
        }
    </div>
</div>