@using EntityLayer.Concrete
@model List<Feature>

<div class="best-rooms py-5">
    <div class="container py-md-5">
        <div class="ban-content-inf row">
            @foreach (var item in Model)
            {
                <div class="maghny-gd-1 col-lg-6 mb-4 mt-4">
                    <div class="maghny-grid">
                        <figure class="effect-lily border-radius  m-0">
                            <img class="img-fluid" src="@item.ImageUrl" alt="" style="height:665px; width:600px;" />
                            <figcaption>
                                <div>
                                    <h4>@item.Description</h4>
                                    <p>@item.Title </p>
                                </div>

                            </figcaption>
                        </figure>
                    </div>
                </div>
            }
            @await Component.InvokeAsync("_Feature2Partial")

        </div>
    </div>
</div>