@model List<Destination>
<div class="col-12 mt-4">
    <div class="card mb-4">
        <div class="card-header pb-0 p-3">
            <h6 class="mb-1">Son Eklenen Rotalar</h6>
            <p class="text-sm">TourifyX En Son Eklenen Seyehat Rotaları</p>
        </div>
        <div class="card-body p-3">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-xl-3 col-md-6 mb-xl-0 mb-4">
                        <div class="card card-blog card-plain">
                            <div class="position-relative">
                                <a class="d-block border-radius-xl overflow-hidden">
                                    <img src="@item.ImageUrl"
                                         class="img-fluid"
                                         style="height:200px; width:100%; object-fit:cover; border-radius:12px;">
                                </a>
                            </div>
                            <div class="card-body px-1 pb-0">
                                <p class="text-gradient text-dark mb-2 text-sm">@item.DayNight - @item.Price ₺</p>
                                <a href="javascript:;">
                                    <h5>
                                        @item.City
                                    </h5>
                                </a>
                                <p class="mb-4 text-sm">
                                    @item.Details1.Substring(0, 70)...
                                </p>
                                <div class="d-flex align-items-center justify-content-between">
                                    <a href="/Destination/DestinationDetails/@item.DestinationId" class="btn btn-outline-primary btn-sm mb-0">Tur Detayları</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>