@using EntityLayer.Concrete
@model List<Comment>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h1>Yorum Listesi</h1>
<br />
<div class="card">
    <div class="table-responsive text-nowrap">
        <table class="table table-hover" style="background-color:darkslategrey; color:white;">
            <thead>
                <tr>
                    <th style="color:white;">#</th>
                    <th style="color:white;">Kullanıcı</th>
                    <th style="color:white;">Rota</th>
                    <th style="color:white;">Mesaj</th>
                    <th style="color:white;">Tarih</th>
                    <th style="color:white;">Sil</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <i class='bx bx-map text-info me-3'></i>
                            <strong>@item.CommentId</strong>
                        </td>

                        <td><strong>@(item.AppUser != null ? item.AppUser.Name + " " + item.AppUser.Surname : item.CommentUser)</strong></td>
                        <td>
                            <ul class="list-unstyled users-list m-0 avatar-group d-flex align-items-center">
                                <li data-bs-toggle="tooltip"
                                    data-popup="tooltip-custom"
                                    data-bs-placement="top"
                                    class="avatar avatar-md pull-up"
                                    title="@item.Destination.City">
                                    <img src="@item.Destination.ImageUrl" alt="" class="rounded-circle" />
                                </li>
                            </ul>
                        </td>

                        <td style="max-width: 200px;">
                            <span class="badge bg-label-primary text-dark"
                                  style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis;text-transform:none; cursor:pointer;"
                                  title="@item.CommentContent">
                                @(
                                                            item.CommentContent.Length > 40
                                                            ? item.CommentContent.Substring(0, 40) + "..."
                                                            : item.CommentContent
                                                            )
                        </span>
                    </td>


                        <td>
                            <span class="badge bg-label-primary me-1">
                                @item.CommentDate.ToString("dd MMMM yyyy")
                            </span>
                        </td>


                        <td>
                            <a href="/Admin/Comment/DeleteComment/@item.CommentId"
                               class="badge bg-danger text-decoration-none"
                               style="cursor:pointer;">
                                <i class='bx bx-trash'></i> Sil
                            </a>
                        </td>

                    </tr>
                                }
            </tbody>
        </table>
    </div>
</div>



