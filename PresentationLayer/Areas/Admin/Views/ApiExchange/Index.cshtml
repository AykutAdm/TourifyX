@model IEnumerable<BookingExchangeViewModel.Exchange_Rates>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h1>Booking Api Kur Bilgileri</h1>
<br />

<div class="card">
    <div class="table-responsive text-nowrap">
        <table class="table table-hover" style="background-color:darkslategrey; color:white;">
            <thead>
                <tr>
                    <th style="color:white;">#</th>
                    <th style="color:white;">Kur Adı</th>
                    <th style="color:white;">Kur Oranı</th>

                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                    count++;
                    <tr>
                        <td>
                            <i class='bx bx-map text-info me-3'></i>
                            <strong>@count</strong>
                        </td>

                        <td><strong>@item.currency</strong></td>


                        <td>
                            <span class="badge bg-label-primary text-dark"><strong>@item.exchange_rate_buy</strong></span>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>