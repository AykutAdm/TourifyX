@model List<GetAllGuideQueryResult>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>CQRS MediatR Rehber Listesi</h1>
<br />
<div class="card">
    <div class="table-responsive text-nowrap">
        <table class="table table-hover" style="background-color:darkslategrey; color:white;">
            <thead>
                <tr>
                    <th style="color:white;">#</th>
                    <th style="color:white;">Ad Soyad</th>
                    <th style="color:white;">Açıklama</th>
                    <th style="color:white;">Sil</th>
                    <th style="color:white;">Güncelle</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <i class='bx bx-map text-info me-3'></i>
                            <strong>@item.GuideId</strong>
                        </td>

                        <td><strong>@item.Name</strong></td>

                        <td>
                            <span class="badge bg-label-primary me-1"
                                  style="text-transform:none; cursor:pointer;"
                                  title="@item.Description">
                                @(item.Description?.Length > 40
                                                            ? item.Description.Substring(0, 40) + "..."
                                                            : item.Description)
                        </span>
                    </td>

                        <td>
                            <a href="#"
                               class="btn btn-danger"
                               style="cursor:pointer;">
                                <i class="bx bx-edit-alt me-1"></i> Sil
                            </a>
                        </td>


                        <td>
                            <a href="/Admin/GuideMediatR/GetGuides/@item.GuideId"
                               class="btn btn-primary"
                               style="cursor:pointer;">
                                <i class="bx bx-edit-alt me-1"></i> Güncelle
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="d-flex justify-content-end mt-4 mb-2">
    <a href="/Admin/GuideMediatR/AddGuide/"
       class="btn text-white px-4 py-2 shadow-sm rounded"
       style="background-color:darkslategrey;">
        <i class='bx bx-plus-circle me-2'></i> Yeni Rehber Ekle
    </a>
</div>



