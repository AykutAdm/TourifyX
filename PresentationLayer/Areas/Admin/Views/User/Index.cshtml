@using EntityLayer.Concrete
@model List<AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Kullanıcı Listesi</h1>
<br />
<div class="card">
    <div class="table-responsive text-nowrap">
        <table class="table table-hover" style="background-color:darkslategrey; color:white;">
            <thead>
                <tr>
                    <th style="color:white;">#</th>
                    <th style="color:white;">Ad Soyad</th>
                    <th style="color:white;">Profil</th>
                    <th style="color:white;">Kullanıcı Adı</th>
                    <th style="color:white;">Mail</th>
                    <th style="color:white;">Yorumlar</th>
                    <th style="color:white;">Tur Geçmişi</th>
                    <th style="color:white;">Sil</th>
                    <th style="color:white;">Düzenle</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <i class='bx bx-map text-info me-3'></i>
                            <strong>@item.Id</strong>
                        </td>

                        <td><strong>@item.Name @item.Surname</strong></td>
                        <td>
                            <ul class="list-unstyled users-list m-0 avatar-group d-flex align-items-center">
                                <li data-bs-toggle="tooltip"
                                    data-popup="tooltip-custom"
                                    data-bs-placement="top"
                                    class="avatar avatar-md pull-up"
                                    title="@item.UserName">
                                    <img src="~/userimages/@item.ImageUrl" alt="" class="rounded-circle" />
                                </li>
                            </ul>
                        </td>
                        <td><strong>@item.UserName</strong></td>
                        <td><span class="badge bg-label-primary me-1" style="text-transform:none;cursor:pointer;">@item.Email</span></td>

                        <td>
                            <a href="/Admin/User/CommentUser/@item.Id"
                               class="btn btn-outline-success ">
                                <i class='bx bx-comment-detail'></i> Yorumlar
                            </a>
                        </td>


                        <td>
                            <a href="/Admin/User/ReservationUser/@item.Id"
                               class="btn btn-outline-light"
                               style="cursor:pointer;">
                                <i class='bx bx-link-external'></i> Tur Geçmişi
                            </a>
                        </td>

                        <td>
                            <a href="/Admin/User/DeleteUser/@item.Id"
                               class="badge bg-danger text-decoration-none"
                               style="cursor:pointer;">
                                <i class='bx bx-trash'></i> Sil
                            </a>
                        </td>


                        <td>
                            <a href="/Admin/User/UpdateUser/@item.Id"
                               class="btn btn-primary"
                               style="cursor:pointer;">
                                <i class="bx bx-edit-alt me-1"></i> Düzenle
                            </a>
                        </td>


                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>