@using EntityLayer.Concrete
@model List<SubAbout>
@{
    ViewData["Title"] = "Alt Hakkında Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Alt Hakkında Listesi</h1>
<br />
<div class="card">
    <div class="table-responsive text-nowrap">
        <table class="table table-hover" style="background-color:darkslategrey; color:white;">
            <thead>
                <tr>
                    <th style="color:white;">#</th>
                    <th style="color:white;">Başlık</th>
                    <th style="color:white;">Açıklama</th>
                    <th style="color:white;">Düzenle</th>
                    <th style="color:white;">Sil</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <i class='bx bx-info-circle text-info me-3'></i>
                            <strong>@item.SubAboutId</strong>
                        </td>

                        <td><strong>@item.Title</strong></td>
                        <td>
                            <span class="badge bg-label-primary me-1"
                                  style="text-transform:none; cursor:pointer;"
                                  title="@item.Description">
                                @(item.Description?.Length > 50
                                                            ? item.Description.Substring(0, 50) + "..."
                                                            : item.Description)
                            </span>
                        </td>

                        <td>
                            <a href="/Admin/SubAbout/EditSubAbout/@item.SubAboutId"
                               class="btn btn-primary"
                               style="cursor:pointer;">
                                <i class="bx bx-edit-alt me-1"></i> Düzenle
                            </a>
                        </td>

                        <td>
                            <a href="/Admin/SubAbout/DeleteSubAbout/@item.SubAboutId"
                               class="btn btn-danger"
                               style="cursor:pointer;"
                               onclick="return confirm('Bu kaydı silmek istediğinize emin misiniz?');">
                                <i class="bx bx-trash me-1"></i> Sil
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="d-flex justify-content-end mt-4 mb-2">
    <a href="/Admin/SubAbout/AddSubAbout/"
       class="btn text-white px-4 py-2 shadow-sm rounded"
       style="background-color:darkslategrey;">
        <i class='bx bx-plus-circle me-2'></i> Yeni Alt Hakkında Ekle
    </a>
</div>

