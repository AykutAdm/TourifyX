@model UpdateAnnouncementDto
@{
    ViewData["Title"] = "UpdateAnnouncement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="card shadow p-4" style="background-color:#f8f9fa; border-radius:12px;">
    <h3 class="mb-4 text-dark">Duyuru Güncelleme Sayfası</h3>

    <form method="post">
        <input type="hidden" asp-for="AnnouncementId" />
        <div class="row">

            <div class="col-md-6 mb-3">
                <label class="form-label">
                    <i class='bx bx-group me-1'></i> Duyuru Başlığı
                </label>
                <input type="text" asp-for="Title" class="form-control" />
            </div>

            <div class="col-md-12 mb-3">
                <label class="form-label">
                    <i class='bx bx-detail me-1'></i> Duyuru İçeriği
                </label>
                <textarea class="form-control" rows="3" asp-for="Content"></textarea>
            </div>

        </div>

        <button class="btn text-white mt-4 shadow-sm rounded"
                style="background-color:darkslategrey;">
            <i class='bx bx-plus-circle me-2'></i>Duyuruyu Güncelle
        </button>
    </form>
</div>
