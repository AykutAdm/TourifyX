@model List<ContactUs>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Bizimle İletişime Geçin Mesajları</h1>
<br />
<div class="card">
    <div class="table-responsive text-nowrap">
        <table class="table table-hover" style="background-color:darkslategrey; color:white;">
            <thead>
                <tr>
                    <th style="color:white;">#</th>
                    <th style="color:white;">Gönderen</th>
                    <th style="color:white;">Konu</th>
                    <th style="color:white;">Tarih</th>
                    <th style="color:white;">Sil</th>
                    <th style="color:white;">Mesajı Aç</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <i class='bx bx-map text-info me-3'></i>
                            <strong>@item.ContactUsId</strong>
                        </td>

                        <td><strong>@item.Name</strong></td>

                        <td><span class="badge bg-label-primary text-dark" style="text-transform:none;">@item.Subject</span></td>

                        <td>
                            <span class="badge bg-label-primary text-dark"><strong>@item.MessageDate.ToString("dd MMMM yyyy")</strong></span>
                        </td>


                        <td>
                            <a href="#"
                               class="badge bg-danger text-decoration-none"
                               style="cursor:pointer;">
                                <i class='bx bx-trash'></i> Sil
                            </a>
                        </td>


                        <td>
                            <a href="/Admin/ContactUs/MessageDetails/@item.ContactUsId"
                               class="btn btn-primary"
                               style="cursor:pointer;">
                                <i class="bx bx-edit-alt me-1"></i> Mesajı Aç
                            </a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>