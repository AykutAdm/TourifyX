@model List<RoleAssignViewModel>
@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Rol Atama Sayfası</h1>

<form method="post">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="form-check">
            <input type="hidden" asp-for="@Model[i].RoleId" />
            <input type="hidden" asp-for="@Model[i].RoleName" />
            <input type="checkbox" asp-for="@Model[i].RoleExist" class="form-check-input" />
            <label class="form-check-label" for="@Model[i].RoleExist">@Model[i].RoleName</label>
        </div>
    }
    <div class="d-flex justify-content-end mt-4 mb-2">
        <button
           class="btn text-white px-4 py-2 shadow-sm rounded"
           style="background-color:darkslategrey;">
            <i class='bx bx-plus-circle me-2'></i> Değişiklikleri Kaydet
        </button>
    </div>
</form>

