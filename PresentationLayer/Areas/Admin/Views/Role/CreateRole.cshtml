@model CreateRoleViewModel
@{
    ViewData["Title"] = "CreateRole";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="card shadow p-4" style="background-color:#f8f9fa; border-radius:12px;">
    <h3 class="mb-4 text-dark">Yeni Rol Ekleme Sayfası</h3>

    <form method="post">
        <div class="row">
            <div class="col-md-6 mb-3">
                <label class="form-label">
                    <i class='bx bx-shield-quarter me-1'></i> Rol Adı
                </label>
                <input type="text" asp-for="RoleName" class="form-control" />
            </div>
        </div>

        <button class="btn text-white mt-4 shadow-sm rounded"
                style="background-color:darkslategrey;">
            <i class='bx bx-plus-circle me-2'></i>Rol Ekle
        </button>
    </form>
</div>
