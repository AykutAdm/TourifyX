@model List<AppUser>
@{
    ViewData["Title"] = "UserList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h1>Kullanıcı Listesi</h1>
<br />
<div class="card">
    <div class="table-responsive text-nowrap">
        <table class="table table-hover" style="background-color:darkslategrey; color:white;">
            <thead>
                <tr>
                    <th style="color:white;">#</th>
                    <th style="color:white;">Kullanıcı Adı</th>
                    <th style="color:white;">Profil</th>
                    <th style="color:white;">Rol Ata</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                    count++;
                    <tr>
                        <td>
                            <i class='bx bx-map text-info me-3'></i>
                            <strong>@count</strong>
                        </td>

                        <td><strong>@item.UserName</strong></td>
                        <td>
                            <ul class="list-unstyled users-list m-0 avatar-group d-flex align-items-center">
                                <li data-bs-toggle="tooltip"
                                    data-popup="tooltip-custom"
                                    data-bs-placement="top"
                                    class="avatar avatar-md pull-up"
                                    title="@item.Name">
                                    <img src="~/userimages/@item.ImageUrl" alt="" class="rounded-circle" />
                                </li>
                            </ul>
                        </td>

                        <td>
                            <a href="/Admin/Role/AssignRole/@item.Id"
                               class="btn btn-primary"
                               style="cursor:pointer;">
                                <i class="bx bx-edit-alt me-1"></i> Rol Ata
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="d-flex justify-content-end mt-4 mb-2">
    <a href="#"
       class="btn text-white px-4 py-2 shadow-sm rounded"
       style="background-color:darkslategrey;">
        <i class='bx bx-plus-circle me-2'></i> Yeni Kullanıcı Ekle
    </a>
</div>





