@using EntityLayer.Concrete
@model List<Guide>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Rehber Listesi</h1>
<br />
<div class="card">
    <div class="table-responsive text-nowrap">
        <table class="table table-hover" style="background-color:darkslategrey; color:white;">
            <thead>
                <tr>
                    <th style="color:white;">#</th>
                    <th style="color:white;">Ad Soyad</th>
                    <th style="color:white;">Profil</th>
                    <th style="color:white;">Açıklama</th>
                    <th style="color:white;">Durum</th>
                    <th style="color:white;">Düzenle</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <i class='bx bx-map text-info me-3'></i>
                            <strong>@item.GuideId</strong>
                        </td>

                        <td><strong>@item.Name</strong></td>
                        <td>
                            <ul class="list-unstyled users-list m-0 avatar-group d-flex align-items-center">
                                <li data-bs-toggle="tooltip"
                                    data-popup="tooltip-custom"
                                    data-bs-placement="top"
                                    class="avatar avatar-md pull-up"
                                    title="@item.Name">
                                    <img src="@item.ImageUrl" alt="" class="rounded-circle" />
                                </li>
                            </ul>
                        </td>

                        <td>
                            <span class="badge bg-label-primary me-1"
                                  style="text-transform:none; cursor:pointer;"
                                  title="@item.Description">
                                @(item.Description?.Length > 40
                                                            ? item.Description.Substring(0, 40) + "..."
                                                            : item.Description)
                        </span>
                    </td>

                        <td>
                        @if (item.Status)
                            {
                                <a href="/Admin/Guide/ChangeToFalse/@item.GuideId" class="btn badge bg-danger">
                                    Pasif Yap
                                </a>
                            }
                            else
                            {
                                <a href="/Admin/Guide/ChangeToTrue/@item.GuideId" class="btn badge bg-info">
                                    Aktif Yap
                                </a>
                            }
                        </td>

                        <td>
                            <a href="/Admin/Guide/EditGuide/@item.GuideId"
                               class="btn btn-primary"
                               style="cursor:pointer;">
                                <i class="bx bx-edit-alt me-1"></i> Düzenle
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="d-flex justify-content-end mt-4 mb-2">
    <a href="/Admin/Guide/AddGuide/"
       class="btn text-white px-4 py-2 shadow-sm rounded"
       style="background-color:darkslategrey;">
        <i class='bx bx-plus-circle me-2'></i> Yeni Rehber Ekle
    </a>
</div>



