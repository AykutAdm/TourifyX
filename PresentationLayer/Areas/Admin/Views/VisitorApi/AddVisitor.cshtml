@model VisitorViewModel
@{
    ViewData["Title"] = "AddVisitor";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="card shadow p-4" style="background-color:#f8f9fa; border-radius:12px;">
    <h3 class="mb-4 text-dark">Api Ziyaretçi Ekleme Sayfası</h3>

    <form method="post">
        <div class="row">

            <div class="col-md-6 mb-3">
                <label class="form-label">
                    <i class='bx bx-user'></i> Ad
                </label>
                <input type="text" asp-for="Name" class="form-control" />
            </div>

            <div class="col-md-6 mb-3">
                <label class="form-label">
                    <i class='bx bx-user-circle'></i> Soyad
                </label>
                <input type="text" asp-for="Surname" class="form-control" />
            </div>

            <div class="col-md-6 mb-3">
                <label class="form-label">
                    <i class='bx bx-map'></i> Şehir
                </label>
                <input type="text" asp-for="City" class="form-control" />
            </div>

            <div class="col-md-6 mb-3">
                <label class="form-label">
                    <i class='bx bx-globe'></i> Ülke
                </label>
                <input type="text" asp-for="Country" class="form-control" />
            </div>

            <div class="col-md-12 mb-3">
                <label class="form-label">
                    <i class='bx bx-envelope'></i> Mail
                </label>
                <input type="email" asp-for="Mail" class="form-control" />
            </div>

        </div>

        <button class="btn text-white mt-4 shadow-sm rounded"
                style="background-color:darkslategrey;">
            <i class='bx bx-plus-circle me-2'></i>Ziyaretçi Oluştur
        </button>
    </form>
</div>
